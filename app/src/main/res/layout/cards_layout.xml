                    android:layout_height="wrap_content"
                    android:text="@string/title_discount_card"
                    android:textColor="#fff"
                    android:layout_gravity="bottom"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="16dp"
                    android:textAlignment="center" />

                <!--<View-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="45dp"-->
                    <!--android:layout_gravity="bottom"-->
                    <!--android:foreground="#85000000" />-->

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <include layout="@layout/only_stamp_card_layout"/>

                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="@string/title_stamp_card"-->
                    <!--android:textColor="#fff"-->
                    <!--android:layout_gravity="bottom"-->
                    <!--android:textAppearance="@style/TextAppearance.AppCompat.Title"-->
                    <!--android:layout_marginBottom="20dp"-->
                    <!--android:layout_marginStart="16dp"-->
                    <!--android:textAlignment="center" />-->

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <include layout="@layout/only_earn_card_layout"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_earn_point"
                    android:textColor="#fff"
                    android:layout_gravity="bottom"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="16dp"
                    android:textAlignment="center" />

            </FrameLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>